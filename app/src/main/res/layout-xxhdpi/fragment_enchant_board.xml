<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    app:cardBackgroundColor="@color/cardview_shadow_end_color"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:contentPadding="3dp">

    <LinearLayout

        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.kkk8888.bdosimulator.OutlineTextView
            android:id="@+id/board_writer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="김개똥"
            android:textColor="#47C83E"
            android:textSize="16sp"
            android:textStyle="bold"
            app:textStroke="true"
            app:textStrokeColor="#D941C5"
            app:textStrokeWidth="1dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textColor="#FFFF00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.kkk8888.bdosimulator.OutlineTextView
            android:id="@+id/board_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="블라블라 블라"
            android:textColor="#E5D85C"
            android:textSize="14sp"
            app:textStroke="true"
            app:textStrokeColor="#BCE55C"
            app:textStrokeWidth="0.5dp" />

        <ImageView
            android:id="@+id/board_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />


    </LinearLayout>


</android.support.v7.widget.CardView>